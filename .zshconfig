# install zinit: https://github.com/zdharma/zinit
# then call this file in .zshrc
# source ~/.zshconfig

export PATH=$PATH:$HOME/.local/bin
export PATH=$PATH:$HOME/.cargo/bin
export XDG_DATA_DIRS=$XDG_DATA_DIRS:/var/lib/snapd/desktop/applications

# zoe/ kafka cli -> https://github.com/adevinta/zoe
export PATH=$PATH:$HOME/.zoe/bin

# appimage directory
export PATH=$PATH:$HOME/Applications

# ENVs
alias ssh="TERM=xterm-256color ssh"
alias grep="grep --color=auto"

# Use vim as default editor
export EDITOR=vim
export PAGER=less

# ZSH history config
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
HISTCONTROL=ignoredups:ignorespace

zinit ice pick"async.zsh" src"pure.zsh"
zinit light sindresorhus/pure

zinit load zsh-users/zsh-completions
# load completions
autoload -Uz compinit
compinit

zinit light zsh-users/zsh-autosuggestions

zinit light zdharma/fast-syntax-highlighting

zinit load zdharma/history-search-multi-word

zinit load zsh-users/zsh-history-substring-search


bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down

man() {
    env \
    LESS_TERMCAP_mb="$(printf "\e[1;31m")" \
    LESS_TERMCAP_md="$(printf "\e[1;31m")" \
    LESS_TERMCAP_me="$(printf "\e[0m")" \
    LESS_TERMCAP_se="$(printf "\e[0m")" \
    LESS_TERMCAP_so="$(printf "\e[1;44;33m")" \
    LESS_TERMCAP_ue="$(printf "\e[0m")" \
    LESS_TERMCAP_us="$(printf "\e[1;32m")" \
    man "${@}"
}

alias c='clear'
alias k='kubectl'
alias nvim='nvim.appimage'

alias vpn='expressvpn'
alias vpnc='expressvpn connect'
alias vpnd='expressvpn disconnect'
alias vpns='expressvpn status'

source <(kubectl completion zsh)
complete -F __start_kubectl k

export BAT_CONFIG_PATH=/home/peyman/.config/bat/config
